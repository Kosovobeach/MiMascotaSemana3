<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvMascota"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/radio_cardview"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorFondo">


        <ImageView
            android:id="@+id/imgFoto"
            android:layout_width="match_parent"
            android:layout_height="200dp"

            app:srcCompat="@drawable/imagen_perro"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgBtnLike"
            android:layout_width="@dimen/iconoCV"
            android:layout_height="@dimen/iconoCV"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="@dimen/margen_predeterminado"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="8dp"
            app:srcCompat="@drawable/icono_hueso_blanco"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvNombreCV"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgFoto" />

        <TextView
            android:id="@+id/tvNombreCV"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margen_predeterminado"
            android:layout_marginLeft="@dimen/margen_predeterminado"
            android:layout_marginEnd="@dimen/margen_predeterminado"
            android:layout_marginRight="@dimen/margen_predeterminado"
            android:text="Nombre"
            android:textAlignment="center"

            android:gravity="center"
            android:textSize="@dimen/iconoCV"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/imgBtnLike"
            app:layout_constraintEnd_toStartOf="@+id/tvLikesCV"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imgBtnLike"
            app:layout_constraintTop_toTopOf="@+id/imgBtnLike" />

        <TextView
            android:id="@+id/tvLikesCV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margen_predeterminado"
            android:layout_marginRight="@dimen/margen_predeterminado"
            android:text="@string/tvLikesCV"
            android:textSize="25sp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/tvNombreCV"
            app:layout_constraintEnd_toStartOf="@+id/icono_hueso_amarillo"
            app:layout_constraintStart_toEndOf="@+id/tvNombreCV"
            app:layout_constraintTop_toTopOf="@+id/tvNombreCV" />

        <ImageView
            android:id="@+id/icono_hueso_amarillo"
            android:layout_width="@dimen/iconoCV"
            android:layout_height="@dimen/iconoCV"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvLikesCV"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tvLikesCV"
            app:layout_constraintTop_toTopOf="@+id/tvLikesCV"
            app:srcCompat="@drawable/icono_hueso_amarillo" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>